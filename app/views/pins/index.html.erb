<h1>Listing pins</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th width="30%" ><center>User email</center></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td> <%= image_tag pin.image.url(:thumb)  %></td>
  
        <td><%= pin.description %></td>
         <td><center><%= pin.user.try(:email) %></center></td>
        <td><center><%= link_to 'Show', pin %></center></td>
        <% if pin.user == current_user %>
        <td><center><%= link_to 'Edit', edit_pin_path(pin) %></center></td>
        <td><center><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></center></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Pin', new_pin_path %>
<% end %>
